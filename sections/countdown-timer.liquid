{{ 'countdown-timer.css' | asset_url | stylesheet_tag }}

<div id="countdown-container">
  <div id="countdown" data-end-time="{{ section.settings.end_time | date: "%Y-%m-%dT%H:%M:%S%z" }}"></div>
  <div class="product-info">
    <img src="{{ section.settings.product_image | img_url: 'medium' }}" alt="Producto" class="product-image">
    <p class="product-price">{{ section.settings.product_price | money }}</p>
  </div>
</div>

